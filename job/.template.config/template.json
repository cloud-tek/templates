{
  "$schema": "http://json.schemastore.org/template",
  "author": "CloudTek",
  "classifications": ["Console", "Job"],
  "identity": "Ion.Job",
  "name": "Ion Job",
  "shortName": "ion-job",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "project": {
      "description": "Project name",
      "type": "parameter",
      "datatype": "text",
      "replaces": "Project",
      "fileRename": "Project",
      "defaultValue": "Ionizd"
    },
    "readme": {
      "type": "parameter",
      "datatype":"bool",
      "defaultValue": "true"
    },
    "license": {
      "type": "parameter",
      "datatype":"bool",
      "defaultValue": "true"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!readme)",
          "exclude": [
            "readme.md"
          ]
        },
        {
          "condition": "(!license)",
          "exclude": [
            "LICENSE"
          ]
        }
      ]
    }
  ]
}
